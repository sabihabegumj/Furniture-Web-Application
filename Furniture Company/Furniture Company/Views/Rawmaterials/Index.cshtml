@model IEnumerable<S2G7PVFAPPLATEST25.Models.Rawmaterial>

@{
    ViewBag.Title = "Index";
}

<h3>Raw Materials</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaterialName)
        </th>
